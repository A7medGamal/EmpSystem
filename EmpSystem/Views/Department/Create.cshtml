@model  EmpSystem.Models.DepartmentsVM;
@{
    ViewBag.Title = "Create Department";
}
<h2>Add Department</h2>
<form action="/Department/Create" method="post" class="form-group">
    <label>Department Name</label>
    <input type="text" name="DepatmentName" class="form-control" />
    <span class="text-danger" asp-validation-for="DepatmentName"></span>
    <br />
    <label>Department Code</label>
    <input type="number" name="DepartmentCode" class="form-control" />
    <span class="text-danger" asp-validation-for="DepartmentCode"></span>
    <br />
    <center>
        <input type="submit" value="save" class="btn btn-primary" />
    </center>
</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
