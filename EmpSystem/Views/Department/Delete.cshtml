@model EmpSystem.Models.DepartmentsVM;
@{
    ViewBag.Title = "Delete Department";
}
<h2>Edit Department</h2>
<form asp-controller="Department" asp-action="Delete" method="post" class="form-group">
    <label>Department Name</label>
    <input type="text" asp-for="DepatmentName" disabled class="form-control" />
   
    <br />
    <label>Department Code</label>
    <input type="number" asp-for="DepartmentCode" disabled class="form-control" />
    
    <br />
    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </center>
</form>
