@model IQueryable<EmpSystem.Models.DepartmentsVM>


@{
    ViewBag.Title = "Department";

}





<h2>Welcome To Department</h2>
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add Department</a>
<br />
<table class="table table-striped table-bordered text-center">
    <tr>
        @*<th class="text-center">Id</th>*@
        <th class="text-center">Department Name</th>
        <th class="text-center">Department Code</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.Id</td>*@
            <td>@item.DepatmentName</td>
            <td>@item.DepartmentCode</td>
            <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>