@model IQueryable<EmpSystem.Models.EmployeeVM>


@{
    ViewBag.Title = "Employee";

}





<h2>Welcome To Employees</h2>
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>
<br />
<table class="table table-striped table-bordered text-center">
    <tr>
        @*<th class="text-center">Id</th>*@
        <th class="text-center"> Name</th>
        <th class="text-center">Salary</th>
        <th class="text-center">Adress</th>
        <th class="text-center">Email</th>
        <th class="text-center">HireDate</th>
        <th class="text-center">Department</th>
        <th class="text-center">District</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.Id</td>*@
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>@item.Adress</td>
            <td>@item.Email</td>
            <td>@item.HireDate.Date.ToShortDateString()s</td>
            <td>@item.DepartmentId</td>
            <td>@item.DistrictId</td>

            <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>